<h2>
  <p> <%= @article.title %> </p>
</h2>
<p> <%= @article.text %> </p>
<p>
<br>
<h4>Comments:</h4>
  <% @article.comments.each do |comments|%>
  <p>Author: <%= comments.author%></p>
  <p>
    Comment: <br>
   <%= comments.body%>
  </p>
  <hr>
<%end%>

<%= form_for ([@article, @article.comments.build]) do |f| %>
   <%if user_signed_in?%>
    <%= f.hidden_field :author, :value => current_user.username %> 
     <p>
      <%= f.label :body %> <br>
      <%= f.text_area :body %>
     </p>
     <p>
      <%= f.submit %>
     </p>
  
  <% else %>
  <p>Пожалуйста аторизуйтесь для того чтобы оставить комментарий</p>
  <%end%>
<% end %>