<div class="container shadow p-3 mb-5 bg-white rounded">
    <div class="row alert alert-light " >
      <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 text-primary " align="center" >
        <h2 >Восстановление пароля</h2>
      </div>
    </div>
    <div class="row alert alert-light " >
      <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 " align="center" >
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="col-sm-4 my-1">
            <div class="field">
              <%= f.label :email %><br />
              <div class="input-group-prepend">
                  <div class="input-group-text">@</div>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder =>"Ваш email", :class  => "form-control" %>
              </div>
            </div>
          </div>
          
             <div class="actions">
              <%= f.submit "Отправить мне инструкции по сбросу пароля", :class => "btn btn-success" %>
            </div>
    
          <% end %>

          <%= render "devise/shared/links" %>
    </div>
  </div>

</div>