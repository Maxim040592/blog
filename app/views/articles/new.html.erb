<h1>Hello</h1>
<%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </p>
   <p>
    <%= f.label :text %> <br>
    <%= f.text_area :text %>
    <% if user_signed_in? %>
     <%= f.hidden_field :user_id, :value => current_user.id %>
    <% end %>
  </p>
   <p>
    <%= f.submit %>
  </p>
<% end %>